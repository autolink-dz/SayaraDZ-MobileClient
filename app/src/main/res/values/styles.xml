<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.main" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:itemTextAppearance">@style/AppTheme.itemTextAppearance</item>
    </style>

    <!-- Intro screen style -->

    <style name="AppTheme.Intro" parent="AppTheme.main">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="AppTheme.Intro.Text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Intro.Text.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">1.5sp</item>

    </style>

    <style name="AppTheme.Intro.Text.content">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
    </style>

    <style name="AppTheme.Intro.Text.content.medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
    </style>

    <style name="AppTheme.ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.itemTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="edit_text_theme">
        <item name="android:padding">10sp</item>
        <item name="android:background">@drawable/edittextbackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
    </style>

    <style name="edit_text_with_label">
        <item name="android:padding">10sp</item>
        <item name="android:background">@drawable/edittextbackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>

    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="txt_view_style1">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/Moteur_vehicule</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_view_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:background">#ffffff</item>
    </style>


</resources>
