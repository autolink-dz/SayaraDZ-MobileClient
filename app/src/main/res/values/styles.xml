<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.main" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <!-- Intro screen style -->

    <style name="AppTheme.Intro" parent="AppTheme.main">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="AppTheme.Intro.Text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Intro.Text.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">1.5sp</item>

    </style>

    <style name="AppTheme.Intro.Text.content">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
    </style>

    <style name="AppTheme.Intro.Text.content.medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
    </style>

    <style name="AppTheme.ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>
