<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@android:color/white"
                                                   android:layout_marginStart="16dp"
                                                   android:layout_marginEnd="16dp"
                                                   android:layout_marginTop="12dp"
                                                   android:layout_marginBottom="12dp">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/brand_image"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:fontFamily="sans-serif-medium"
            style="@style/AppTheme.Intro.Text.content.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/brand_name" app:layout_constraintStart_toEndOf="@+id/brand_image"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/brand_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/brand_image"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>