<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:animateLayoutChanges="false"
                                                   android:layout_width="match_parent"
                                                   android:layout_gravity="bottom"
                                                   android:layout_height="wrap_content">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Filres de recherches"
              style="@style/AppTheme.Intro.Text.content.medium" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView4"
              app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Marques" style="@style/AppTheme.Intro.Text.content"
              android:textColor="@color/grey"
              android:textSize="16sp"
              app:layout_constraintStart_toStartOf="parent"
              android:id="@+id/textView8" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginStart="16dp"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/brand_filter_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:foregroundGravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix"
            android:paddingBottom="4dp"
            android:textColor="@color/grey"
            android:textSize="18sp"
            style="@style/AppTheme.Intro.Text.content"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView9"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/price_range_seek_bar"
            app:layout_constraintBottom_toBottomOf="@+id/price_range_seek_bar" android:layout_marginTop="24dp"/>

    <com.jaygoo.widget.RangeSeekBar
            android:layout_width="305dp"
            android:layout_height="75dp"
            app:rsb_mode="range"
            app:rsb_tick_mark_mode="number"
            app:rsb_tick_mark_text_array="@array/price_ranges"
            app:rsb_thumb_scale_ratio="1.3"
            app:rsb_thumb_size="24dp"
            app:rsb_min="1"
            app:rsb_max="35"
            app:rsb_progress_radius="5dp"
            app:rsb_progress_default_color="@color/light_grey"
            app:rsb_progress_color="@color/colorPrimary"
            app:rsb_progress_height="3dp"
            app:rsb_range_interval="0"
            app:rsb_indicator_show_mode="showWhenTouch"
            app:rsb_indicator_height="32dp"
            app:rsb_indicator_width="100dp"
            app:rsb_tick_mark_text_margin="18dp"
            app:rsb_tick_mark_gravity="center"
            app:rsb_tick_mark_text_color="@color/grey"
            app:rsb_tick_mark_text_size="14sp"
            app:rsb_indicator_radius="5dp"
            app:rsb_indicator_arrow_size="5dp"
            android:id="@+id/price_range_seek_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brand_filter_recycler_view"
            app:layout_constraintStart_toEndOf="@+id/textView12" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="@color/grey"
            android:textSize="18sp"
            style="@style/AppTheme.Intro.Text.content"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView12"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/distance_range_seek_bar"
            app:layout_constraintBottom_toBottomOf="@+id/distance_range_seek_bar" android:layout_marginTop="24dp"/>

    <com.jaygoo.widget.RangeSeekBar
            android:layout_width="0dp"
            android:layout_height="75dp"
            app:rsb_mode="range"
            app:rsb_tick_mark_mode="number"
            app:rsb_tick_mark_text_array="@array/distance_ranges"
            app:rsb_thumb_scale_ratio="1.3"
            app:rsb_thumb_size="24dp"
            app:rsb_min="0"
            app:rsb_max="500"
            app:rsb_progress_radius="5dp"
            app:rsb_progress_default_color="@color/light_grey"
            app:rsb_progress_color="@color/colorPrimary"
            app:rsb_progress_height="3dp"
            app:rsb_range_interval="0"
            app:rsb_indicator_show_mode="showWhenTouch"
            app:rsb_indicator_height="32dp"
            app:rsb_indicator_width="100dp"
            app:rsb_tick_mark_text_margin="18dp"
            app:rsb_tick_mark_gravity="center"
            app:rsb_tick_mark_text_color="@color/grey"
            app:rsb_tick_mark_text_size="14sp"
            app:rsb_indicator_radius="5dp"
            app:rsb_indicator_arrow_size="5dp"
            android:id="@+id/distance_range_seek_bar"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/price_range_seek_bar"
            app:layout_constraintHorizontal_bias="0.0"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Appliquer"
            android:id="@+id/submit_filter_button"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/distance_range_seek_bar"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintVertical_bias="0.0" android:layout_marginEnd="16dp" android:layout_marginTop="32dp"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Supprimer"
            android:id="@+id/reset_filter_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/submit_filter_button"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginStart="16dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_clear"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/cancel_filter_dialog_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>