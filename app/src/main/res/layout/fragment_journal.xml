<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars[2]"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:id="@+id/user_image"/>
    <TextView
            android:text="chenineazeddine5"
            style="@style/AppTheme.Intro.Text.content.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_tv"
            app:layout_constraintTop_toTopOf="@+id/user_image" app:layout_constraintStart_toEndOf="@+id/user_image"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="@+id/user_image"
            app:layout_constraintVertical_bias="0.3"/>
    <TextView
            android:text="chenineazeddine@gmail.com"
            style="@style/AppTheme.Intro.Text"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_tv" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/username_tv"
            app:layout_constraintStart_toStartOf="@+id/username_tv"
    />



    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/dividerVertical"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view3" app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="?android:attr/dividerVertical"
          android:layout_marginTop="16dp"
          app:layout_constraintTop_toBottomOf="@+id/user_image" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/dividerVertical"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view2" app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="?android:attr/dividerVertical"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view4" app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <TextView
            android:text="Mes Commandes "
            style="@style/AppTheme.Intro.Text.content.medium"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_height="50dp"
            android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Mes Offres"
            style="@style/AppTheme.Intro.Text.content.medium"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:gravity="left|center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_height="50dp"
            android:id="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Mes annonces"
            style="@style/AppTheme.Intro.Text.content.medium"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:gravity="left|center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_height="50dp"
            android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/view3" app:layout_constraintStart_toStartOf="parent"
           />

</androidx.constraintlayout.widget.ConstraintLayout>