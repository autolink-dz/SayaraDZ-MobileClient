<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:layout_marginBottom="@dimen/mtrl_card_spacing"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent" android:id="@+id/materialCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="397dp"
                android:scaleType="centerCrop"
                android:background="@android:color/black"
                tools:srcCompat="@tools:sample/backgrounds/scenic[16]"
                android:id="@+id/announce_image_view"
                android:layout_height="145dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/background_gradient_shape"
                app:layout_constraintEnd_toEndOf="@+id/announce_image_view"
                app:layout_constraintStart_toStartOf="@+id/announce_image_view"
                app:layout_constraintTop_toTopOf="@+id/announce_image_view"
                app:layout_constraintBottom_toBottomOf="@+id/announce_image_view" android:id="@+id/frameLayout"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0">

        </FrameLayout>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" tools:srcCompat="@tools:sample/avatars[3]"
                android:id="@+id/owner_image_view"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_border_shape"
                android:padding="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline2"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/vehicle_name_text_view"
                android:textSize="18sp"
                style="@style/AppTheme.Intro.Text.content.medium"
                android:text="bmw"
                app:layout_constraintStart_toEndOf="@+id/brand_image_view" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/brand_image_view"
                app:layout_constraintTop_toTopOf="@+id/brand_image_view"/>


        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp" tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/brand_image_view"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/announce_image_view"
                android:layout_marginStart="8dp"/>


        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline2"
                                                    app:layout_constraintGuide_begin="119dp"
                                                    android:orientation="horizontal"/>
        <TextView
                android:text="2000 DA"
                android:padding="4dp"
                android:textSize="16sp"
                style="@style/AppTheme.Intro.Text.content.medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehicle_price_text_view"
                android:textColor="@android:color/white" android:textStyle="italic"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/announce_image_view" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehicle_distance_text_view"
                style="@style/AppTheme.Intro.Text.content"
                android:textSize="16sp"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="@+id/vehicle_name_text_view"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_name_text_view" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehicle_year_text_view"
                android:textSize="16sp"
                style="@style/AppTheme.Intro.Text.content"
                android:textColor="@color/grey"
                app:layout_constraintStart_toEndOf="@+id/vehicle_distance_text_view"
                app:layout_constraintBaseline_toBaselineOf="@+id/vehicle_distance_text_view"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Intro.Text.content"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:id="@+id/announce_date"
                app:layout_constraintBaseline_toBaselineOf="@+id/vehicle_year_text_view"
                app:layout_constraintEnd_toEndOf="@+id/owner_image_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
