<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginStart="16dp"
                                                   android:layout_marginEnd="16dp"
                                                   android:layout_marginTop="8dp"
                                                   android:layout_marginBottom="8dp">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/model_image"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Chevrolet"
            android:fontFamily="sans-serif-medium"
            style="@style/AppTheme.Intro.Text.content.medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/model_name" app:layout_constraintStart_toEndOf="@+id/model_image"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/model_image"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/model_options_number"
            app:layout_constraintStart_toStartOf="@+id/model_name"
            app:layout_constraintTop_toBottomOf="@+id/model_name"
            app:layout_constraintBottom_toBottomOf="@+id/model_image" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/model_colors_number"
            app:layout_constraintBottom_toBottomOf="@+id/model_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/model_name" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/model_options_number" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>